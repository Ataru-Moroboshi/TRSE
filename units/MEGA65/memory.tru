unit Memory;
var
	@donotremove zpLo
	@donotremove zpHi
	zpLo : pointer at $90;
	zpHi : pointer at $92;
	pa, pb : byte;
	

procedure SetCurrentMemoryBank(pa : global byte);
begin
	asm("
		lda Memory_pa
		sta Memory_zpHi
	");
end;

procedure Poke32(pa, pb:global byte);
begin
	asm(" 
		ldz Memory_pa
		lda Memory_pb
		eom 
		sta (Memory_zpLo),z
	");
	
end;

end.
