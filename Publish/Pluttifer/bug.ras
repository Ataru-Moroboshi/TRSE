program spankme;
var  
   	index: byte; 
	x,y,i,jenni : byte;

	plutt: pointer;

begin



	
	SCREEN_BG_COL:=BLACK;

//	clearscreen(32,^$0400); 


	x:=1;




	jenni:=1;
	while 1=1 do begin
		plutt:=$0400;

		for y:=0 to 25 do begin

			for i:=0 to 40 do begin
				plutt[i]:=jenni;
			end;
			inczp(plutt,40);

		end;

		waitforraster(0);
		jenni:=jenni+1;

	end;

end.
