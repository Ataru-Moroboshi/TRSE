program Rasters;
var
	const kernal:byte=1;



interrupt IRQ1();

interrupt IRQ0();
begin
	StartIRQ(@kernal);
	screen_bg_col:=red;
	RasterIRQ(IRQ1(),$40,kernal);
	CloseIRQ();
end;

interrupt IRQ2();
begin
	StartIRQ(@kernal);
	screen_bg_col:=yellow;
	RasterIRQ(IRQ0(),$00,kernal);
	CloseIRQ();
end;

interrupt IRQ1();
begin
	StartIRQ(@kernal);
	screen_bg_col:=green;
	RasterIRQ(IRQ2(),$80,kernal);
	CloseIRQ();
end;

begin
	StartRasterChain(IRQ0(), 0,kernal);
	Loop(); 
end.
